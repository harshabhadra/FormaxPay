<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.easypay.epmoney.epmoneyaeps"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.easypay.epmoney.epmoneyaeps.application.PaisaNikalApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/PaisaNikalAppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning" >
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.TermsAndConditionActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.SelectBankActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.FingerprintScanActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.QRCodeScanActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.AepsTransactionActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.TransactionDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialTheme.NoActionBar.NoStatusBar" />
        <activity
            android:name="com.easypay.epmoney.epmoneyaeps.ui.activity.IntermidiateActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/PaisaNikalAppTheme" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>