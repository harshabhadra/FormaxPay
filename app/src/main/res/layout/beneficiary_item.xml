<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ben_last_success_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <TextView
        android:id="@+id/ben_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/ben_last_success_name"
        app:layout_constraintTop_toBottomOf="@+id/ben_last_success_name" />

    <TextView
        android:id="@+id/ben_ifsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        style="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/ben_account_number"
        app:layout_constraintTop_toBottomOf="@+id/ben_account_number" />

    <TextView
        android:id="@+id/ben_last_success_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ben_ifsc"
        app:layout_constraintTop_toBottomOf="@+id/ben_ifsc" />

        <Button
            android:id="@+id/ben_transfer_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/radio_button_back"
            android:text="transfer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ben_last_success_name" />

        <ImageView
            android:id="@+id/ben_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_delete_red_32dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ben_transfer_button"
            app:layout_constraintStart_toStartOf="@+id/ben_transfer_button"
            app:layout_constraintTop_toBottomOf="@+id/ben_transfer_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>